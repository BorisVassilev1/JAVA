#version 460

#include <MoldSimulation.glincl>
#include <random.glincl>

layout(local_size_x = 1, local_size_y = 1) in;


layout(rgba32f, binding = 1) uniform image2D image_in;
layout(rgba32f, binding = 0) uniform image2D image_out;

void main() {
	ivec2 pixel = ivec2(gl_GlobalInvocationID.xy);
	
	vec4 color = imageLoad(image_in, pixel);
	imageStore(image_out, pixel, color);
}